{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6"],
    "outDir": ".",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/*"]
}
